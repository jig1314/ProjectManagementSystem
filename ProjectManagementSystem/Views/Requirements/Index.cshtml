@model IEnumerable<ProjectManagementSystem.Models.Requirement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="k-button">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequirementName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRequirementType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequirementName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRequirementType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="k-button k-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="k-button">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="k-button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
