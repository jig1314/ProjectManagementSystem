                            <label asp-for="IdRequirementType"></label>
                            <kendo-numerictextbox for="IdRequirementType" />
                            <span asp-validation-for="IdRequirementType" class="text-danger k-invalid-msg" data-for="IdRequirementType"></span>
                        </div>
<div class="form-group">
